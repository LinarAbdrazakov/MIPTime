chat: 	connection.cpp   \
			./client.cpp 		   \
			./server.cpp
	$(CC)	client.cpp camera.cpp window.cpp -fpermissive -pthread -o c `pkg-config --cflags --libs opencv`
	$(CC)	server.cpp -pthread -o s
#==============================================================================
clean:
	rm -rf *.o *.gch
